/************************ 盒模型 *************************/

page {
   width: 100%;
   height: 100%;
   background: #f0eff5;
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   -webkit-overflow-scrolling: touch; /* 去除橡皮筋效果 */
}

.scroll-view {
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   -webkit-overflow-scrolling: touch;
}

view {
   word-break: break-all;
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   -webkit-overflow-scrolling: touch;
}

cover-view {
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   -webkit-overflow-scrolling: touch;
}

button {
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   border: none;
   border-radius: 0;
   padding: 0;
}

button::after {
   border: none;
   border-radius: 0;
}

label {
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
}

input {
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   outline: none;
   border: none;
   list-style: none;
}

textarea {
   box-sizing: border-box;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
}

.container {
   width: 100%;
   height: 100%;
   overflow-x: hidden;
   overflow-y: auto;
}

.container_left_right {
   width: 100%;
   height: 100%;
   overflow-x: hidden;
   overflow-y: auto;
   display: flex;
   display: -webkit-flex;
   flex-direction: row;
   -webkit-flex-direction: row;
}

::-webkit-scrollbar {
   width: 0;
   height: 0;
   color: transparent;
}

swiper {
   width: 100%;
   height: 400rpx;
}

swiper-item {
   width: 100%;
   height: 100%;
}

swiper-item image {
   width: 100%;
   height: 100%;
}

/* 清除浮动 */

.clear_float {
   clear: both;
}

/* 去色 */

.gray {
   -webkit-filter: grayscale(100%) opacity(50%);
   -moz-filter: grayscale(100%) opacity(50%);
   -ms-filter: grayscale(100%) opacity(50%);
   -o-filter: grayscale(100%) opacity(50%);
   filter: grayscale(100%) opacity(50%);
}
